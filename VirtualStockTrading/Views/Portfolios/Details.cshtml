@model IEnumerable<VirtualStockTrading.Portfolio>


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Details</h2>

<div>
	<h4>Portfolio</h4>
	<hr />
	<table class="table">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.StockName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ShareQuantity)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.BidPrice)
			</th>
			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.StockName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ShareQuantity)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.BidPrice)
				</td>
				<td>
					@Html.ActionLink("Sell", "Sell", new { id = item.PortfolioId })

				</td>
			</tr>
		}

	</table>
